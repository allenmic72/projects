<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/my_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dip"
    tools:context=".MainActivity" >

    <Button
      	android:id="@+id/team_button"
      	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:text="@string/team_label" />
    <Button
    	android:id="@+id/create_error_button"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:text="@string/create_error_label" />
    
    <Button 
      	android:id="@+id/sudoku_button"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/sudoku_button_label"
      	/>
    <Button
        android:id="@+id/boggle_main_button"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/boggle_main_label"
	    />
    <Button
        android:id="@+id/main_exit_button"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/exit_label"
	    />

</LinearLayout>